<UserControl x:Class="Eixini.Maheirema.Wpf.TagUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:l="clr-namespace:Eixini.Maheirema.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="100"
             d:DesignWidth="150">
    <Grid x:Name="TagGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Button x:Name="TagButton"
                Grid.Column="0"
                Margin="5"
                Padding="5">
            Label in button
        </Button>

        <Button x:Name="TagDeleteButton"
                Grid.Column="1"
                Click="TagDeleteButton_Click"
                Margin="5"
                Padding="5">
            x
        </Button>
    </Grid>
</UserControl>
