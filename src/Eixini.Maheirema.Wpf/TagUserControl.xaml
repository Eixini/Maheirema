<UserControl x:Class="Eixini.Maheirema.Wpf.TagUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Eixini.Maheirema.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="283*"/>
            <RowDefinition Height="167*"/>
        </Grid.RowDefinitions>
        <Button Margin="5,5,5,5"
                x:Name="TagButton" Grid.RowSpan="2">
            <Grid x:Name="TagGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Label  x:Name="TagContentLabel"
                        Grid.Column="0">
                    Label in button
                </Label>
                <Button x:Name="TagDeleteButton"
                        Grid.Column="1"
                        BorderThickness="0"
                        Background="{x:Null}"
                        Click="TagDeleteButton_Click">
                    x
                </Button>
            </Grid>
        </Button>
    </Grid>
</UserControl>
